:root {
  font-size 62.5%
}

@media (min-width 768px) {
  :root {
    font-size 100%
  }
}

* {
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  box-sizing border-box;
}

body {
  margin 0
  min-height 100vh
  background linear-gradient(to right bottom, #efefef, #cfcfcf)
  font-family Roboto, sans-serif
  color #121212
}

@media(prefers-color-scheme dark) {
  body {
    background linear-gradient(to right bottom, #101010, #313131);
    color #ededed
  }
}

.hidden {
  display none !important
}

.container {
  padding 1rem
}

body > header, footer {
  width 100%
  padding .5rem
  background rgba(245, 245, 245, .75)
  backdrop-filter blur(5px)
  text-align center

  @media(prefers-color-scheme dark) {
    background rgba(15, 15, 15, .75)
  }
}

header {
  position sticky
  top 0
  display flex
  gap 1rem
  justify-content center
  align-items center

  @media(prefers-color-scheme dark) {
    color #fff
  }

  h1 {
    margin 0
  }
}

footer {
  position absolute
  bottom 0
}
