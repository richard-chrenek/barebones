{% apply spaceless %}
    <!doctype html>
    <html lang="sk">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="/favicon.ico">
        <title>{% block title %}{{ constant('Barebones\\App\\Config::APP_NAME') }}{% endblock %}</title>
        {% block stylesheets %}
            {{ getLinks('app') }}
        {% endblock %}
        {% block head_scripts %}
            {{ getScripts('app') }}
        {% endblock %}
    </head>

    <body>
    {% block body_top_scripts %}
    {% endblock %}

    {{ include('components/header.html.twig') }}

    {% block main_content %}
    {% endblock %}

    {{ include('components/footer.html.twig') }}

    {% block body_bottom_scripts %}
    {% endblock %}
    </body>
    </html>
{% endapply %}